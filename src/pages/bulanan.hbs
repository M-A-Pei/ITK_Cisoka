<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/0412fad157.js" crossorigin="anonymous"></script>
    <script>
      const handleDate = ()=>{
            const x = document.getElementById('dateInput').value
            window.location.href = `/${x}`;
      }
    </script>
  </head>
  <body>
   {{>navbar}}
    <div class="position-absolute">
        <input onchange={handleDate()} type="month" class="input" id="dateInput" value="{{tahunDanBulan}}">
    </div>

    <div class="container">
      
      <div class="row d-flex justify-content-center mx-1">
        {{#if tidakAda}}
        <div class="col-6 d-flex flex-column border border-dark p-3 mt-5">
          <h1>bulan ini tidak ada</h1>
        </div>
        {{else}}
        <div class="col-lg-6 d-flex flex-column border border-dark mt-5 p-0">
          <div class="text-center bg-success text-light w-100">
            <h2 >total penghasilan </h2>
            <h5 >{{tahunDanBulan}}</h5>
          </div>

          <table border="0" class="w-100 m-2">
          {{#if listBimbel}}
            <tr>
              <td class="border-bottom">
                <b>(bimbel)</b>
              </td>
            </tr>
          {{/if}}
          
          {{#each listBimbel}}
              <tr>
                <td>{{this.nama}} <small class="text-secondary">{{this.tanggalBayarBulanan}}</small></td>
                <td>: {{../hargaBulanBimbel}}</td>
              </tr>  
          {{/each}}

          {{#if listKomputer}}
            <tr>
              <td class="border-bottom">
                <b>(komputer)</b>
              </td>
            </tr>
          {{/if}}

          {{#each listKomputer}}
              <tr>
                <td>{{this.nama}} <small class="text-secondary">{{this.tanggalBayarBulanan}}</small></td>
                <td>: {{../hargaBulanKomputer}}</td>
              </tr>  
          {{/each}}
          {{#if listInggris}}
            <tr>
              <td class="border-bottom">
                <b>(inggris)</b>
              </td>
            </tr>
          {{/if}}
          {{#each listInggris}}
              <tr>
                <td>{{this.nama}} <small class="text-secondary">{{this.tanggalBayarBulanan}}</small></td>
                <td>: {{../hargaBulanInggris}}</td>
              </tr>  
          {{/each}}
                <tr>
                <td>total pendaftaran bulan ini</td>
                <td>: {{listPendaftaran}}</td>
              </tr>  
              <tr class="border border-secondary"></tr>
          {{#if total}}
              <tr>
                <td>Total</td>
                <td><b id="total" class="text-end">Rp. {{total}}</b></td>
              </tr>
          {{/if}}
          </table>
        </div>
        {{/if}}
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>